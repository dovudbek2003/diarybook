<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card mb-5 mt-5">
                <div class="card-body">
                    <div class="list-group mb-1">
                        <a href="#" class="list-group-item list-group-item-action">
                            <img src="https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg"
                                class="rounded-circle float-start" style="height: 30px;" alt="...">
                            <h5 class="card-title">Username</h5>
                        </a>
                    </div>
                    <p class="card-text">{{diary.text}}</p>
                    <p class="card-text"><small class="text-muted">{{diary.updatedAt}}</small></p>
                </div>
                {{#if diary}}
                <img src={{diary.imageUrl}} class="card-img-bottom" alt="...">
                {{/if}}
            </div>
        </div>
    </div>
    <div class="row">
        {{#if comments}}
        <div class="col-md-6 offset-3">
            {{#each comments}}
            <div class="card text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title">Username</h5>
                    <p class="card-text">{{comment}}</p>
                </div>
                <div class="card-footer text-body-secondary">
                    {{createdAt}}
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <div class="col-md-6 offset-3">
            <div class="card-body">
                <form action="/diary/comment/{{diary.id}}" method="post">
                    <div class="mb-3">
                        <label for="comment" class="form-label">Add comment</label>
                        <textarea class="form-control" id="comment" name="comment" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-1">add</button>
                </form>
            </div>
        </div>
    </div>
</div>