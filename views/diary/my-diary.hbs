<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card mt-3">
                <div class="card-body">
                    <form action="/diary/add" method="post" enctype="application/x-www-form-urlencoded">
                        <div class="mb-3">
                            <label for="imageUrl" class="form-label">Image url</label>
                            <input class="form-control" type="text" name="imageUrl" id="imageUrl">
                        </div>
                        <div class="mb-3">
                            <label for="text" class="form-label">Example textarea</label>
                            <textarea class="form-control" name="text" id="text" rows="4"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-3">
            {{#if diaries}}
            {{#each diaries}}
            <div class="card mb-5 mt-5">
                <div class="card-body">
                    <div class="list-group mb-1">
                        <a href="#" class="list-group-item list-group-item-action">
                            <img src="https://img.freepik.com/premium-vector/bearded-man-avatar-man-vector-portrait_9385-36.jpg"
                                class="rounded-circle float-start" style="height: 30px;" alt="...">
                            <h5 class="card-title">Username</h5>
                        </a>
                    </div>
                    <p class="card-text">{{text}}</p>
                    <p class="card-text"><small class="text-muted">{{updatedAt}}</small></p>
                </div>
                <img src={{imageUrl}} class="card-img-bottom" alt="...">
                <div class="card-footer d-flex">
                    <a href="/diary/my/{{id}}" type="button" class="btn btn-success">Open</a>
                    <a href="/diary/update/{{id}}" type="button" class="btn btn-primary mx-3">Update</a>
                    <form action="/diary/delete/{{id}}" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            {{/each}}
            {{else}}
            <h1 class="mt-3 text-center">No data...</h1>
            {{/if}}
        </div>
    </div>
</div>